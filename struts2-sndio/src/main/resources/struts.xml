<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
   "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

	<package name="default" extends="struts-default" namespace="/">
		
		<result-types>
      		<result-type name="json" class="org.apache.struts2.json.JSONResult"/>
		</result-types>
		
		<action name="personnes" class="fr.insee.cnio.formation.struts.action.JsonAction" method="lister">
			<result>/WEB-INF/jsp/personnes.jsp</result>
		</action>
				
		<action name="personne" class="fr.insee.cnio.formation.struts.action.JsonAction" method="chercher">
				<result name="none" type="json">
					<param name="enableGZIP">true</param>
					<param name="excludeProperties">personne.taille</param>
					<param name="includeProperties">personne.*</param>
				</result>
		</action>
				
		
	</package>

</struts>